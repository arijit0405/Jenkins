pipeline {
    agent any

    environment {
        FRONT_IMAGE = 'arijit2001/mern-frontend'
        BACK_IMAGE = 'arijit2001/mern-backend'
        TAG = "${env.BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Frontend') {
            steps {
                bat "docker build -t %FRONT_IMAGE%:%TAG% frontend"
            }
        }

        stage('Build Backend') {
            steps {
                bat "docker build -t %BACK_IMAGE%:%TAG% backend"
            }
        }

        stage('Login to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    bat """
                        echo | set /p="%PASSWORD%" | docker login -u %USERNAME% --password-stdin
                    """
                }
            }
        }

        stage('Push Images') {
            steps {
                bat "docker push %FRONT_IMAGE%:%TAG%"
                bat "docker push %BACK_IMAGE%:%TAG%"
            }
        }

        stage('Deploy with Docker Compose') {
            steps {
                bat "docker-compose down || exit 0"
                bat "docker-compose up -d --build"
            }
        }
    }

    post {
        success {
            echo "üöÄ MERN app deployed with Compose!"
        }
        failure {
            echo "‚ùå Pipeline failed. Check the logs for details."
        }
    }
}
